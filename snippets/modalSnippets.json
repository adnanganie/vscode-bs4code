{
    "Modal":{
        "prefix": "!bsm",
        "body": [        
            "<div class=\"modal fade\" id=\"exampleModal\" tabindex=\"-1\" role=\"dialog\" aria-labelledby=\"exampleModalLabel\" aria-hidden=\"true\">",
                "<div class=\"modal-dialog\" role=\"document\">",
                    "<div class=\"modal-content\">",
                    "<div class=\"modal-header\">",
                        "<h5 class=\"modal-title\" id=\"exampleModalLabel\">Modal title</h5>",
                        "<button type=\"button\" class=\"close\" data-dismiss=\"modal\" aria-label=\"Close\">",
                        "<span aria-hidden=\"true\">&times;</span>",
                        "</button>",
                    "</div>",
                    "<div class=\"modal-body\">",
                    "$0",
                    "</div>",
                    "<div class=\"modal-footer\">",
                        "<button type=\"button\" class=\"btn btn-secondary\" data-dismiss=\"modal\">Close</button>",
                        "<button type=\"button\" class=\"btn btn-primary\">Save changes</button>",
                    "</div>",
                    "</div>",
                "</div>",
            "</div>"
        ],
        "description": "Dialogs to your site for lightboxes, user notifications, or completely custom content."
    },
    "Button Trigger a Modal":{
        "prefix":"!bsbtm",
        "body": [
            "<button type=\"button\" class=\"btn btn-primary\" data-toggle=\"modal\" data-target=\"#exampleModal\">",
              "Launch demo modal",
            "</button>"            
        ],
        "description": "Toggle a working modal demo by clicking the button below. It will slide down and fade in from the top of the page."
    }
}